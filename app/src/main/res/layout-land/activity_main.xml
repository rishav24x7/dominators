<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vishwajeet.example.com.hospitaldir.MainActivity"
    android:background="@drawable/dsc">

    <TextView
        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="HOSPITALS"
        android:textAlignment="center"
        android:textColor="?android:attr/colorAccent"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinner1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:text="TYPE"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints"
        app:layout_constraintRight_toLeftOf="@+id/spinner1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="161dp"
        android:layout_height="64dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/toast_frame"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/search"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="301dp"
        android:layout_height="32dp"

        android:layout_marginBottom="10dp"
        android:layout_marginRight="114dp"
        android:background="@android:drawable/btn_dropdown"
        android:drawSelectorOnTop="true"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/spinner2"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="103dp"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        android:text="@string/location"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="134dp"
        app:layout_constraintRight_toLeftOf="@+id/spinner2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.041" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="301dp"
        android:layout_height="32dp"

        android:layout_marginBottom="17dp"
        android:layout_marginRight="114dp"
        android:background="@android:drawable/btn_dropdown"
        android:drawSelectorOnTop="true"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/spinner3"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="116dp"
        android:layout_height="41dp"
        android:text="HOSPITAL"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints"
        app:layout_constraintRight_toLeftOf="@+id/spinner3"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="301dp"
        android:layout_height="32dp"
        android:layout_marginBottom="24dp"

        android:layout_marginRight="114dp"
        android:background="@android:drawable/btn_dropdown"
        android:drawSelectorOnTop="true"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="69dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/splash_img"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-3dp"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
